{
	"name": "historical-stock-data",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"build:static": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test": "playwright test",
		"test:ui": "playwright test --ui",
		"data:fetch": "bun run scripts/01-fetch-remote.ts",
		"data:consolidate": "bun run scripts/02-consolidate-local.ts",
		"data:normalize": "bun run scripts/03-normalize-data.ts",
		"data:generate": "bun run scripts/04-generate-json.ts",
		"data:pipeline": "bun run data:fetch && bun run data:consolidate && bun run data:normalize && bun run data:generate",
		"prefetch:sp500": "bun run scripts/prefetch-sp500.ts",
		"prefetch:top25": "bun run scripts/prefetch-top25.ts",
		"prefetch:crypto": "bun run scripts/prefetch-crypto.ts",
		"prefetch:all": "bun run prefetch:sp500 && bun run prefetch:crypto"
	},
	"devDependencies": {
		"@playwright/test": "^1.49.0",
		"@sveltejs/adapter-static": "^3.0.0",
		"@sveltejs/adapter-vercel": "^5.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@types/d3": "^7.4.0",
		"prettier": "^3.0.0",
		"prettier-plugin-svelte": "^3.0.0",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"vite": "^6.0.0"
	},
	"dependencies": {
		"d3": "^7.9.0"
	}
}
